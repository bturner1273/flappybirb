    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Run FlappyBird",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "preLaunchTask": "start server",
            "postDebugTask": "stop server",
            "runtimeArgs": ["--harmony", "--no-deprecation"],
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
